<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>MockMate</display-name>

    <!-- ✅ Signup Servlet -->
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.mockmate.dao.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <!-- ✅ Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mockmate.dao.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- ✅ Schedule Session Servlet -->
    <servlet>
        <servlet-name>ScheduleSessionServlet</servlet-name>
        <servlet-class>com.mockmate.dao.ScheduleSessionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ScheduleSessionServlet</servlet-name>
        <url-pattern>/ScheduleSessionServlet</url-pattern>
    </servlet-mapping>

    <!-- ✅ Admin Action Servlet -->
    <servlet>
        <servlet-name>AdminActionServlet</servlet-name>
        <servlet-class>com.mockmate.dao.AdminActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminActionServlet</servlet-name>
        <url-pattern>/adminAction</url-pattern>
    </servlet-mapping>

    <!-- ✅ Feedback Form Servlet -->
    <servlet>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>com.mockmate.dao.FeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>

    <!-- ✅ Approve Interview Servlet -->
    <servlet>
        <servlet-name>ApproveInterviewServlet</servlet-name>
        <servlet-class>com.mockmate.dao.ApproveInterviewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApproveInterviewServlet</servlet-name>
        <url-pattern>/ApproveInterviewServlet</url-pattern>
    </servlet-mapping>

    <!-- ✅ Default welcome page -->
    <welcome-file-list>
        <welcome-file>homePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
